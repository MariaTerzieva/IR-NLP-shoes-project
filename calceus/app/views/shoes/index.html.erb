<%- model_class = Shoe -%>
<div class="page-header.container">
  <h1>Обувки</h1>
  <%= link_to t('.new', :default => t("helpers.links.new")), new_shoe_path, :class => 'btn btn-primary' %>
</div>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Модел</th>
      <th>Снимка</th>
      <th>Цена</th>
      <th>Вид</th>
      <th>Размери</th>
      <th>Цветове</th>
      <th>Дистрибутор</th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @shoes.each do |shoe| %>
      <tr>
        <td><%= link_to shoe.title.mb_chars.upcase.to_s, shoe_path(shoe) %></td>
        <td><%= image_tag shoe.photo %></td>
        <td><%= shoe.price %></td>
        <td><%= shoe.gender %></td>
        <td><%= shoe.sizes_list %></td>
        <td><%= shoe.colors_list.mb_chars.downcase.to_s %></td>
        <td><%= link_to 'Купи', shoe.link %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_shoe_path(shoe), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      shoe_path(shoe),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Сигурни ли сте?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
